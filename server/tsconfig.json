{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node", "express"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "allowImportingTsExtensions": true,
    "paths": {
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@token/*": ["config/spotifyToken/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src",
    "src/**/*.ts",
    "src/**/*.d.ts"
   ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
